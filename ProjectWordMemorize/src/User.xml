<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 회원정보 처리 SQL -->
<mapper namespace="User.DAO.UserMapper">

<!-- 회원 기본 정보 저장 -->
<!-- 원래는 풀 경로board.vo.Board를 parameterType에 써야하지만 mybatis-config에서 alias 지정해서 별칭으로 사용이 가능-->
<insert id="insertUser" parameterType="UserInfomation"> 
insert into userAccount (
	AccountNumber
	, userID
	, Password
	, createdate
)
values (
	 useraccseq.nextVal
	, #{userID}
	, #{password}
	, sysdate
)
</insert>
<!-- 회원 ID 검색 -->
<select id="checkUserID" parameterType="String" resultType="UserInfomation"> 
select userID, password from UserAccount
where userID = #{userID} 
</select>
<!-- 회원 검색 -->
<select id="checkUser" parameterType="UserInfomation" resultType="UserInfomation">
select * from UserAccount
where 
		userID = #{userID}
		AND password = #{password}
</select>
<!-- 단어 출력(N1) -->
<select id="viewWordN1" resultType="addedWordN1">
select * from memorizeN1
</select>
<!-- 단어 출력(N2) -->
<select id="viewWordN2" resultType="addedWordN2">
select * from memorizeN2
</select>
<!-- 단어 출력(N3) -->
<select id="viewWordN3" resultType="addedWordN3">
select * from memorizeN3
</select>
 
</mapper>
